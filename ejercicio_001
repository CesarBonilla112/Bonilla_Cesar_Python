# Constantes
AÑO_ACTUAL = 2023

# Variables

nombre = "nombre"
print(nombre)

primer_apellido = "primer apellido"
print(primer_apellido)

segundo_apellido = "segundo apellido"
print(segundo_apellido)

año_de_nacimiento = "año de nacimiento"
print(año_de_nacimiento)

mes_y_dia_de_nacimiento = "mes-dia de nacimiento"
print(mes_y_dia_de_nacimiento)


# Inputs
nombre = input("¿Cuál es tu nombre? ")
primer_apellido = input ("¿Cuál es tu primer apellido? ")
segundo_apellido = input ("¿Cuál es tu segundo apellido? ")
año_de_nacimiento = input ("¿En qué año naciste? ")
mes_y_dia_de_nacimiento = input("¿En qué mes y día naciste? ")


print(nombre)
print(primer_apellido)
print(segundo_apellido)
print(año_de_nacimiento)
print(mes_y_dia_de_nacimiento)

# Concatenación de variables en un print
nombre_completo = nombre, primer_apellido, segundo_apellido
print("Este es tu nombre completo en mayúsculas:",nombre.upper(), primer_apellido.upper(), segundo_apellido.upper())
print("Este es tu nombre completo en minúsculas:",nombre.lower(), primer_apellido.lower(), segundo_apellido.lower())

